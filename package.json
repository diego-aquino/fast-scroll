{
  "name": "fast-scroll",
  "version": "1.0.1",
  "description": "Navigate faster by increasing your browser's scrolling speed.",
  "main": "index.js",
  "repository": "git@github.com:diego-aquino/fast-scroll.git",
  "author": "Diego Aquino <diegocruzdeaquino@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "yarn build:clean && webpack serve",
    "build": "yarn build:clean & yarn types:check && yarn build:run && yarn build:compress",
    "build:clean": "rm -rf build/*",
    "build:run": "cross-env NODE_ENV=production webpack",
    "build:compress": "ts-node -r tsconfig-paths/register ./scripts/build/compress.ts",
    "release:version": "ts-node -r tsconfig-paths/register ./scripts/release/getVersion.ts",
    "release:upgrade": "ts-node -r tsconfig-paths/register ./scripts/release/upgradeVersion.ts",
    "lint": "eslint --ext 'js,jsx,ts,tsx' --cache",
    "style": "prettier --loglevel warn --ignore-unknown --no-error-on-unmatched-pattern",
    "style:check": "yarn style --check",
    "style:format": "yarn style --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "types:check": "tsc --pretty --noEmit",
    "pre:commit": "lint-staged",
    "pre:push": "concurrently 'yarn types:check' 'yarn lint .' && yarn test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "clsx": "^1.1.1",
    "focus-visible": "^5.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.107",
    "@swc/jest": "^0.2.5",
    "@testing-library/dom": "^8.11.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/archiver": "^5.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.6",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/webextension-polyfill": "^0.8.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "archiver": "^5.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "^12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fs-extra": "^10.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.3.3",
    "node-sass": "^7.0.0",
    "postcss": "^8.4.5",
    "postcss-focus-visible": "^6.0.1",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.1.15",
    "tailwindcss": "^3.0.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1",
    "zx": "^4.2.0"
  },
  "lint-staged": {
    "*.(j|t)sx?": [
      "yarn lint"
    ],
    "*": [
      "yarn style:format"
    ]
  }
}
