{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "allowJs": true,
    "jsx": "preserve",
    "removeComments": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["./*"],
      "~tests/*": ["tests/*"],
      "~scripts/*": ["scripts/*"]
    }
  },
  "include": [
    "src/**/*.ts*",
    "src/**/*.js*",
    "tests/**/*.ts*",
    "tests/**/*.js*",
    "scripts/**/*.ts*",
    "scripts/**/*.js*",
    "*.ts*",
    "*.js*"
  ],
  "exclude": ["node_modules", "build", "coverage"]
}
