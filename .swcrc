{
  "jsc": {
    "target": "es5",
    "parser": {
      "syntax": "typescript",
      "tsx": true
    },
    "transform": {
      "react": {
        "runtime": "automatic"
      },
      "hidden": {
        "jest": true
      }
    },
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["./*"],
      "~tests/*": ["tests/*"],
      "~scripts/*": ["scripts/*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "sourceMaps": true
}
